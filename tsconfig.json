{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"]
}
